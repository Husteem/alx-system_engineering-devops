#!/usr/bin/env bash
# a script that install and configure HAproxy on web-02
# distribute requests using a roundwobin algorithm
# HAproxy manages init the script. husteem

sudo apt-get -y install software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.5
sudo apt-get -y update

# Install HAProxy
sudo apt-get -y install haproxy
sudo sed -i -e '$aENABLED=1\n' /etc/default/haproxy
sudo sed -i -e '$a\listen http-in\n\tbind :80\n\tbalance roundrobin\n\tserver 214831-web-01 35.153.17.42:80 check\n\tserver 214831-web-02 100.26.170.252:80 check\n' /etc/haproxy/haproxy.cfg
sudo service haproxy restart
